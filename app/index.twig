{% extends "./_templates/layout.twig" %}

{# If rename this file, rename in gulp 'html' task as well #}
{% block page %}
<main>
	<div>
		<div class="content-dynamic" data-content="liberty125">
			{% include "./_templates/blocks/section-banner-liberty-125.twig" %}
		</div>
		<div class="content-dynamic" data-content="liberty50" hidden>
			{% include "./_templates/blocks/section-banner-liberty-50.twig" %}
		</div>
		<div class="content-dynamic" data-content="medley" hidden>
			{% include "./_templates/blocks/section-banner-medley.twig" %}
		</div>
		<div class="content-dynamic" data-content="zip" hidden>
			{% include "./_templates/blocks/section-banner-zip.twig" %}
		</div>
	</div>
	<div class="js--anchor-target" data-anchor="benefit">
		<div class="content-dynamic" data-content="liberty125">
			{% include "./_templates/blocks/section-benefit-liberty-125.twig" %}
		</div>
		<div class="content-dynamic" data-content="liberty50" hidden>
			{% include "./_templates/blocks/section-benefit-liberty-50.twig" %}
		</div>
		<div class="content-dynamic" data-content="medley" hidden>
			{% include "./_templates/blocks/section-benefit-medley.twig" %}
		</div>
		<div class="content-dynamic" data-content="zip" hidden>
			{% include "./_templates/blocks/section-benefit-zip.twig" %}
		</div>
	</div>
	<div class="js--anchor-target" data-anchor="table">
		<div class="content-dynamic" data-content="liberty125">
			{% include "./_templates/blocks/section-table-liberty-125.twig" %}
		</div>
		<div class="content-dynamic" data-content="liberty50" hidden>
			{% include "./_templates/blocks/section-table-liberty-50.twig" %}
		</div>
		<div class="content-dynamic" data-content="medley" hidden>
			{% include "./_templates/blocks/section-table-medley.twig" %}
		</div>
		<div class="content-dynamic" data-content="zip" hidden>
			{% include "./_templates/blocks/section-table-zip.twig" %}
		</div>
	</div>
	<div class="js--anchor-target" data-anchor="location">
		<div class="content-dynamic" data-content="medley" hidden>
			<div class="container sm-py-30">
				<img width="100%" src="./assets/images/ba-duong-mien-phi.png" />
			</div>
		</div>
	</div>
	<div class="js--anchor-target" data-anchor="location">
		{% include "./_templates/blocks/section-location.twig" %}
	</div>
	<div class="section section--comment" data-module="Comments" data-end-point="./_data/comments.json">
		<div class="container">
			<div class="logo">
				<img src="./assets/images/logo.png" alt="">
			</div>
			<div class="container--sm">
				<p><strong>Ý Kiến (<span class="total"></span>)</strong></p>
				<form>
					<div class="relative">
						<input type="text" placeholder="Tên khách hàng">
						<div class="flex mt-10">
							<textarea class="flex-1" rows="1" placeholder="Ý kiến của bạn"></textarea>
							<button type="button" class="btn btn-send flex-0 ml-10">Gửi</button>
						</div>
					</div>
					<div class="flex comment-categories">
						<div class="cat-item active">Tất cả bình luận</div>
					</div>
					<div class="comment-list text-left">
					</div>
					<div class="flex justify-center mt-30">
						<a href="javascript:void(0)" class="js--load-more link--load-more">Xem thêm</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
{% endblock %}